!!!
%html
  %head
    = stylesheet_link_tag "screen", "frontend"
    %title politikaopen
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"
    = javascript_include_tag 'rails'
    = javascript_include_tag 'application'
    %meta{:name => 'csrf-token', :content => form_authenticity_token}
    %meta{:name => 'csrf-param', :content => 'authenticity_token'}
  
  %body
    #navigation_top
      = link_to "Prihlásenie", forms_path
      |
      = link_to "Registrácia", new_user_path
    #header
      = link_to(image_tag("frontend_logo.png"), frontend_users_path)
    #menu_container
      #menu
        %ul
          %li
            = link_to "Zoznam", frontend_users_path
          %li
            = link_to "Vyhľadávanie", new_frontend_search_path
          %li
            = link_to "Registrácia", new_user_path
          %li
            = link_to "O projekte", frontend_page_path('about')
          %li
            = link_to "Kontakty", frontend_page_path('contact')
            
    #flash
      - if flash[:notice]
        %p.notice= flash[:notice]
      - if flash[:error]
        %p.error= flash[:error]
            
    #container_main
      = yield
    #menu_bottom